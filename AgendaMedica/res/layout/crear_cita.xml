<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<TextView android:id="@+id/mostrarFecha" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ccc"
		android:textSize="40sp" android:gravity="center_vertical|center_horizontal"/>
	<Button android:id="@+id/pickDate" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Cambiar fecha" />
	<Button android:id="@+id/programarCita" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Programar cita para esta fecha" />
</LinearLayout>
